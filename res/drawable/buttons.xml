<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#FFDF66"
                android:startColor="#FFCF00"
                android:angle="90" />
                            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FFDF66"
                android:startColor="#FFCF00"
                android:angle="90" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>        
        <shape>
        <solid android:color="@android:color/transparent"/>
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>