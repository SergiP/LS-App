<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fillViewport="true">

	<LinearLayout
		android:orientation="vertical"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
 
        <TextView
	       	android:padding="5dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="top"
	        android:text="@string/help_homNetList"
	        android:textColor="#000000" />        

	    <LinearLayout
        	android:orientation="horizontal"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:padding="10dip"> 

		    <ImageView     
	      		android:id="@+id/helpMainList" 
	      		android:padding="10dip"
	      		android:layout_height="wrap_content"
	      		android:layout_width="wrap_content"
	       		android:src="@drawable/help_list_net" />

		</LinearLayout>

		<LinearLayout
       		android:orientation="horizontal"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:padding="2dip"> 

			<TextView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textSize="20dip"
            	android:gravity="center_vertical"
            	android:textColor="#174a76"
            	android:ellipsize="marquee"
            	android:singleLine="true"
            	android:text="Nombre de la red" />

	    </LinearLayout> 

		<LinearLayout
       		android:orientation="horizontal"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:padding="2dip"> 

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_gravity="right"
				android:text="@string/strSituation"
				android:textStyle="bold"
				android:textColor="#287fcb"
				android:textSize="10dip" />

			<TextView
				android:id="@+id/networkSituation"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:paddingLeft="3dip"
				android:singleLine="true"
				android:textColor="#287fcb"
				android:textSize="10dip"
				android:text="@string/help_listnet_situation" />

	    </LinearLayout> 

	    <LinearLayout
       		android:orientation="horizontal"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="2dip">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_gravity="right"
				android:text="@string/strNumSensors"
				android:textStyle="bold"
				android:textColor="#287fcb"
				android:textSize="10dip" />
            	
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:paddingLeft="3dip"
				android:id="@+id/networkSensors"
				android:singleLine="true"
				android:textColor="#287fcb"
				android:textSize="10dip"
				android:text="@string/help_listnet_numsensor" />
       
       </LinearLayout>  
    			
  </LinearLayout>

</ScrollView>